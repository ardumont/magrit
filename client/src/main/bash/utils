function _color {
	#echo $1
	echo -e "\x1b[${1}m"
}

error=$(_color "91")
warning=$(_color "36")
cool=$(_color "92")
clear=$(_color "0")

# $1 is the text to colorize
# $2 is the color code
function _colorize {
	echo $1 | sed -e "s/^/$(_color $2)/" -e "s/$/${clear}/"
}

function _colorizeStatus {
	echo $1 | sed \
		-e "s/O/${cool}O${clear}/g" \
		-e "s/E/${error}E${clear}/g" \
		-e "s/?/${warning}?${clear}/g"
}
