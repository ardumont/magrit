#!/bin/bash -e 

source utils

remote=$(git config --get magrit.remote)
if [[ "$remote" == "" ]]; then
	remote='magrit'
fi

ssh_url=$(git config --local remote.${remote}.url)

ssh_url=${ssh_url:6}
user=${ssh_url%@*}
ssh_url=${ssh_url#*@}
host=${ssh_url%:*}
ssh_url=${ssh_url#*:}
port=${ssh_url%/*}
repo="/${ssh_url#*/}/"

logWidth=$(git config --get --int magrit.log.maxWidth || echo "60")
if [ $logWidth -lt 40 ]; then
	logWidth=40
elif [ $logWidth -gt 100 ]; then
	logWidth=100
fi

blanks=$(for i in $(seq $logWidth); do echo -n ' '; done)

for sha1 in $(git log --format=%H $1); do
	buildStatus=$(ssh -x -p $port $user@$host "magrit status $repo $sha1")
	log=$(git log  --color=always -1 --oneline $sha1 -z)
	len=${#log}
	buildStatus=$(_colorizeStatus $buildStatus)
	log="${log:0:$logWidth}${blanks:$len}"
	lineEnd=" "
	if [ $len -ge $logWidth ]
	then
		lineEnd="\u2026"
	fi
	echo -e "$log$lineEnd | $buildStatus"
done

